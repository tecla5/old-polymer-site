{
  "name": "tecla5",
  "root": "./dist",
  "clean_urls": true,
  "error_page": "error.html",
  "routes": {
      "/*": "index.html",
      "/*.html": "index.html",
      "/**/*.html": "index.html"
  },
  "forms": {
    "contact": {
      "to": "cabrerajavier@gmail.com",
      "from": "contact@tecla5.com",
      "replyTo": "{{name}} <{{email}}>",
      "subject": "Contact Received from {{name}}",
      "html": "<b>message:</b> {{message}}",
      "text": "Name: {{message}}",
      "success": "/#contact-received",
      "failure": "/#contact-failure"
    }
  }
}
